{
  "manifest_version": 2,
  "name": "Elden Banner",
  "version": "2.0.0",
  "description": "Shows an Elden Ring-style banner for GitHub events like PR merges and approvals",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "icons": {
    "48": "assets/icon.png"
  },
  "web_accessible_resources": [
    "assets/elden_ring_sound.mp3",
    "assets/Mantinia.otf"
  ]
}
