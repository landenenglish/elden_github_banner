{
  "manifest_version": 3,
  "name": "Elden Banner",
  "version": "2.0.0",
  "description": "Shows an Elden Ring-style banner for GitHub events like PR merges and approvals",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon.png"
    }
  },
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "icons": {
    "48": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/elden_ring_sound.mp3", "assets/Mantinia.otf"],
      "matches": ["https://github.com/*"]
    }
  ]
}
